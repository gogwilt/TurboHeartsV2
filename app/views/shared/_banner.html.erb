<div class="container_12">
  <div class="grid_3">
  <%= link_to image_tag("logo.png", :alt => 'TurboHearts', :class => 'logo'), dashboard_path %>
  </div>
  
  <div id="toolbar-buttons" class="grid_4">
  <% if signed_in? %>
  <span class="toolbar-button <%=@dashboard_view ? "selected" : nil%>" id="dashboard-toolbar-button"><%= link_to "Dashboard", dashboard_path %></span>
  <span class="toolbar-button <%=@league_view ? "selected" : nil%>" id="league-toolbar-button"><%= link_to "League", current_user.player.leagues[0] %></span>
  <span class="toolbar-button <%=@profile_view ? "selected" : nil%>" id="profile-toolbar-button"><%= link_to "Profile", current_user.player %></span>
  <% end %>
  </div>

  <div id="right-banner-info">
  <% if signed_in? %>
    <%= render 'players/search_form' %>
    <span class="logout-link"><%= link_to "Logout", signout_path, :method => :delete %></span>
  <% else %>
    <% unless @do_not_show_sign_in_info %>
    <span class = "mini-login"> <%= render 'sessions/sign_in_form' %> </span>
    <% end %>
  <% end %>
  </div>  
</div>