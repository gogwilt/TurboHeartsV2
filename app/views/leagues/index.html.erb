<h1>Listing leagues</h1>

<table>
  <tr>
    <th>Start date</th>
    <th>End date</th>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @leagues.each do |league| %>
  <tr>
    <td><%= league.start_date %></td>
    <td><%= league.end_date %></td>
    <td><%= league.name %></td>
    <td><%= league.description %></td>
    <td><%= link_to 'Show', league %></td>
    <td><%= link_to 'Edit', edit_league_path(league) %></td>
    <td><%= link_to 'Destroy', league, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

