<div class="grid_6">
  <p id="notice"><%= notice %></p>
  <h1><%= @league.name %></h1>
  <p id="league-summary">
    <%= @league.description %>
  </p>
</div>

<div class="grid_6">
  <h2 class="component-heading"><%= image_tag "glyphicons_289_podium.png" %>League standings</h2>
  <%= render 'leagues/league_standings'%>
</div>

<div class="clear"></div>

<div class="grid_12">
  <h2 class="component-heading"><%= image_tag "glyphicons_032_wifi_alt.png" %>Recent games</h2>
  <%= render 'shared/game_score_table' %>
</div>

<div class="grid_12">
  <h2 class="component-heading"><%= image_tag "glyphicons_040_stats.png" %>Winnings chart</h2>
  <%= render 'leagues/winnings_graph'%>
</div>

<div class="grid_12">
  <h2 class="component-heading"><%= image_tag "glyphicons_040_stats.png" %>Boss table</h2>
  <%= render 'leagues/boss_table'%>
</div>